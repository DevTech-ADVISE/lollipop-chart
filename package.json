{
  "name": "lollipop-chart",
  "version": "1.0.0",
  "description": "D3.js lollipop chart for comparing individual values to group averages",
  "main": "dist/lollipopChart.js",
  "scripts": {
    "coverage": "BABEL_DISABLE_CACHE=1 NODE_ENV=test jest --coverage",
    "dev": "webpack-dev-server --inline --hot --config webpack.demo.config.js --content-base demo/",
    "dist": "NODE_ENV=production webpack -p --config webpack.dist.config.js",
    "doc": "jsdoc2md --template README.hbs src/lollipopChart.js > README.md --verbose",
    "test": "BABEL_DISABLE_CACHE=1 NODE_ENV=test jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BI/lollipop-chart.git"
  },
  "keywords": [
    "average",
    "compare",
    "lollipop",
    "chart"
  ],
  "author": "BI",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BI/lollipop-chart/issues"
  },
  "homepage": "https://github.com/BI/lollipop-chart#readme",
  "devDependencies": {
    "babel-jest": "^12.1.0",
    "babel-loader": "^6.2.4",
    "css-loader": "^0.23.1",
    "jest-cli": "^12.1.1",
    "jsdoc-to-markdown": "^1.3.6",
    "node-sass": "^3.7.0",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "d3": "^3.5.17", 
    "d3-tip": "git://github.com/BI/d3-tip"
  }, 
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(scss|css)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "collectCoverage": true,
    "collectCoverageOnlyFrom": {
      "<rootDir>/src/lollipopChart.js": true
    }
  }
}
